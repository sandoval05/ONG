@model IEnumerable<ONG.BL.Desaparecido>

@{
    ViewBag.Title = "Desaparecidos";
}

<h2 class="text-center">Registros</h2>

<p>
    @Html.ActionLink("Crear Nuevo Registro", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlImagen)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Primer_Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Segundo_Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Primer_Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Segundo_Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Residencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.UrlImagen" style="width:80px; height:auto;" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Primer_Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Segundo_Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Primer_Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Segundo_Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Residencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Detalle", "Detalle", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.Id })
        </td>
    </tr>
}

</table>
