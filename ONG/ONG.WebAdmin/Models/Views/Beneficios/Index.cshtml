@model IEnumerable<ONG.BL.Beneficio>

@{
    ViewBag.Title = "Beneficios";
}

<h2 class="text-center">Beneficios</h2>

<p>
    @Html.ActionLink("Crear Nuevo Beneficio", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlImagen)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.UrlImagen" style="width:80px; height:auto;" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Activo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.id }) |
            @Html.ActionLink("Detalle", "Detalle", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.id })
        </td>
    </tr>
}

</table>
